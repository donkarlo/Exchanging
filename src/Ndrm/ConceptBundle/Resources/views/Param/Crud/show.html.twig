{% extends 'base.html.twig' %}

{% block body %}
    <h1>Param</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ param.id }}</td>
            </tr>
            <tr>
                <th>Conceptcategory</th>
                <td>{{ param.conceptCategory }}</td>
            </tr>
            <tr>
                <th>Inputtype</th>
                <td>{{ param.InputType }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ param.title }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cancept_param_list_by_concept_category') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('param_edit', { 'id': param.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
