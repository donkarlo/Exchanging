{% extends 'base.html.twig' %}
{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Roles for username: {{ user.username }}</h3>
        </div>
        <div class="panel-body">
            <form method="POST" action="{{ path('set_user_roles',{'idUsers':user.id}) }}">
                {% for roleAndId in allRolesMonitpringsAndTheirIds %}
                    <input name="checkedRoleIds[]" type="checkbox" 
                           value="{{ roleAndId.id }}"  
                           {% if roleAndId.id in user.getRolesIds() %}checked{% endif %}/>
                    {{ roleAndId.monitoring }}
                    <br/>
                {% endfor %}
                <input name="_token" type="hidden" value="{{ _token }}" />
                <input name="submit" type="submit" value="submit" class="btn btn-default"/>
            </form>
        </div>
        <div class="panel-footer">
        </div>
    {% endblock %}