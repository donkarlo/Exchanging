{% extends 'base.html.twig' %}

{% block body %}
    <h1>Params list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Valuetype</th>
                <th>Htmlinputtype</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for param in params %}
            <tr>
                <td><a href="{{ path('param_show', { 'id': param.id }) }}">{{ param.id }}</a></td>
                <td>{{ param.valueType }}</td>
                <td>{{ param.htmlInputType }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('param_show', { 'id': param.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('param_edit', { 'id': param.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('param_new') }}">Create a new param</a>
        </li>
    </ul>
{% endblock %}
